<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Inicia com o tamanho do objeto a 20% e aumenta gradualmente para 100% -->

    <scale
        android:fromXScale="20%"
        android:fromYScale="20%"
        android:toXScale="100%"
        android:toYScale="100%"
        android:pivotX="50%"
        android:pivotY="50%"
        android:duration="@integer/anim_duration" />      <!--duraçao da animação-->

    <!-- Fade in - animação de opacidade: Começa transparente, termina opaco -->

    <alpha
        android:fromAlpha="0"
        android:toAlpha="1"
        android:duration="@integer/anim_duration"  />    <!--duraçao da animação-->

</set>