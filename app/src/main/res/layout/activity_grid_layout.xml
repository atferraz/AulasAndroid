<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.atferraz.aula04layouts.LayoutGrid">

    <Button
        android:layout_width="75dp"
        android:layout_height="80dp"
        android:text="TableLayout"
        android:id="@+id/buttonTableLayout"
        android:onClick="buttonOnClickJump2Activity"
        android:layout_row="0"
        android:layout_column="0" />

    <Button
        android:layout_width="75dp"
        android:layout_height="80dp"
        android:text="RelativeLayout"
        android:id="@+id/buttonRelativeLayout"
        android:onClick="buttonOnClickJump2Activity"
        android:layout_row="0"
        android:layout_column="2" />

    <Button
        android:layout_width="75dp"
        android:layout_height="80dp"
        android:text="LinearLayoutVertical"
        android:id="@+id/buttonLinearLayoutVertical"
        android:onClick="buttonOnClickJump2Activity"
        android:layout_row="1"
        android:layout_column="1" />

    <Button
        android:layout_width="75dp"
        android:layout_height="80dp"
        android:text="LinearLayoutHorizontal"
        android:id="@+id/buttonLinearLayoutHorizontal"
        android:onClick="buttonOnClickJump2Activity"
        android:layout_row="1"
        android:layout_column="3" />

    <Button
        android:layout_width="75dp"
        android:layout_height="80dp"
        android:text="FrameLayout"
        android:id="@+id/buttonFrameLayout"
        android:onClick="buttonOnClickJump2Activity"
        android:layout_row="0"
        android:layout_column="4" />

</GridLayout>
