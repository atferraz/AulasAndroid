<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.atferraz.aula04layouts.LayoutTable">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FrameLayout"
        android:id="@+id/buttonFrameLayout"
        android:onClick="buttonOnClickJump2Activity" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RelativeLayout"
        android:id="@+id/buttonRelativeLayout"
        android:onClick="buttonOnClickJump2Activity" />

    <Button
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:text="LinearLayoutVertical"
        android:id="@+id/buttonLinearLayoutVertical"
        android:onClick="buttonOnClickJump2Activity" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GridLayout"
        android:id="@+id/buttonGridLayout"
        android:onClick="buttonOnClickJump2Activity" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LinearLayoutHorizontal"
        android:id="@+id/buttonLinearLayoutHorizontal"
        android:onClick="buttonOnClickJump2Activity" />

</TableLayout>
