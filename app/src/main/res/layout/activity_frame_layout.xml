<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.atferraz.aula04layouts.LayoutFrame">

    <Button
        android:layout_width="75dp"
        android:layout_height="80dp"
        android:text="RelativeLayout"
        android:id="@+id/buttonRelativeLayout"
        android:onClick="OnClickAnimateView" />

    <Button
        android:layout_width="75dp"
        android:layout_height="80dp"
        android:text="GridLayout"
        android:id="@+id/buttonGridLayout"
        android:onClick="buttonOnClickJump2Activity"
        android:layout_gravity="right|top" />

    <Button
        android:layout_width="75dp"
        android:layout_height="80dp"
        android:text="LinearLayoutVertical"
        android:id="@+id/buttonLinearLayoutVertical"
        android:onClick="buttonOnClickJump2Activity"
        android:layout_gravity="left|bottom" />

    <Button
        android:layout_width="75dp"
        android:layout_height="80dp"
        android:text="TableLayout"
        android:id="@+id/buttonTableLayout"
        android:onClick="buttonOnClickJump2Activity"
        android:layout_gravity="right|bottom" />

    <Button
        android:layout_width="75dp"
        android:layout_height="80dp"
        android:text="LinearLayoutHorizontal"
        android:id="@+id/buttonLinearLayoutHorizontal"
        android:onClick="buttonOnClickJump2Activity"
        android:layout_gravity="center" />

</FrameLayout>
